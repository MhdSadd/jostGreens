<%- include("../partials/admin/side-nav") %>
  <%- include("../partials/admin/header") %>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
      integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
      crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
      integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
      crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/f577db74dc.js" crossorigin="anonymous"></script>
    <style>
      .singleBusiness {
        color: white;
        background-color: #58b15d;
        padding: 0.5rem 2rem;
        border-radius: 0.3rem;
        font-weight: bolder;
      }

      .singleBusiness:hover {
        color: #58b15d;
        background-color: #fff;
        border: 2px solid #58b15d;
        font-weight: bolder;
      }

      .files {
        border-bottom: 1px solid #e9ecef;
        /* padding: 0.5rem 0; */
      }

      .modal-dialog {
        overflow: hidden;
      }

      .contain {
        position: relative;
      }

      .overlay {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        height: 100%;
        width: 100%;
        opacity: 0;
        transition: 0.5s ease-in-out;
        background-color: #58b15d;
      }

      .contain:hover .overlay {
        opacity: 0.9;
      }

      li {
        list-style: none;
        font-family: montserrat;
        font-weight: 500;
      }

      #myProgress {
        /* width: 100%; */
        border: 2px solid #58b15d;
        border-radius: .2rem;
        background-color: transparent;
      }

      #myBar {
        height: 15px;
        background-color: #58b15d;
      }

      .form-group input {
        border: 1px solid #58b15d;
        border-radius: .2rem;
        padding: 7px 1px;
      }

      .form-group input::placeholder {
        text-align: center;
        font-weight: lighter;
      }
    </style>

    <div class="content">

      <div class="container-fluid">
        <%- include ("../partials/messages"); %>
          <form action="/admin/addinvestor" method="post">
            <div class="form-group">
              <input type="text" name="name" id="" placeholder="Investor's Name">
              <input type="email" name="email" id="" placeholder="Investor's Mail">
              <button class="btn btn-success">Create</button>
            </div>
          </form>
          <div class="row">
            <div class="col-md-12">
              <div class="card">
                <div class="card-header card-header-success">
                  <h4 class="card-title">All Investors ( <%= InvestorsCount %> )</h4>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table">
                      <thead class="text-black">
                        <th>Investor Name</th>
                        <th>Investor Mail</th>
                      </thead>
                      <tbody>
                        <%allInvestors.forEach(pass=> { %>
                          <tr>
                            <td>
                              <!-- Button trigger modal -->
                              <button href="/admin/single-investor/<%= pass._id %>" class="btn singleBusiness"
                                data-toggle="modal" data-target="#ID<%=pass._id%>">
                                <%= pass.name %>
                              </button>
                            </td>
                            <td>
                              <%= pass.email %>
                            </td>
                          </tr>
                          <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
      </div>
    </div>

    <%- include("../partials/admin/footer") %>