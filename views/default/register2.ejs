<%- include("../partials/default/header") %>


  <div class="message-grid">
    <div class="form-box register-card">
      <h1 class="text-center mb-4">
        <i class="fas fa-user-plus"></i> Register
      </h1>
      <%- include ("../partials/messages"); %>
        <form action="/register" method="POST" enctype="multipart/form-data">
          <div class="row">
            <div class="form-group group-one col-md-5">
              <label for="name">Business Registered Name</label>
              <input type="text" id="name" name="businessName" class="form-control"
                placeholder="Business Registered Name" value="<%= businessName || '' %>" />
            </div> <br>
            <div class="form-group group-one col-md-5">
              <label for="address">Business Address</label>
              <input type="text" id="address" name="businessAddress" class="form-control" placeholder="Business Address"
                value="<%= businessAddress || '' %>" />
            </div>
          </div>

          <div class="row">
            <div class="form-group group-one col-md-5">
              <label for="address">Business Phone Number</label>
              <input type="text" id="address" name="businessPhone" class="form-control"
                placeholder="Business Phone Number" value="<%= businessPhone || '' %>" />
            </div> <br>

            <div class="form-group group-one col-md-5">
              <!-- <label for="">Track</label> -->
              <select class="category select form-control" name="category" style="margin-top:2rem">
                <option selected disabled>
                  Choose business category
                </option>
                <option value="UI/UX">Product Design (UI/UX)</option>
                <option value="FRONTEND">Frontend Engineering</option>
                <option value="BACKEND">Backend Engineering</option>
                <option value="FULLSTACK">Fullstack Engineer</option>
                <option value="DATA SCIENCE">Data Science</option>
              </select>
            </div>
          </div>

          <div class="row">
            <div class="form-group group-two col-md-6">
              <label for="bus_doc" class="label"><i class="fas fa-upload"></i> &nbsp; Investment Pitch Deck</label>
              <input type="file" id="bus_doc" name="businessFiles" class="form-control" multiple="multiple"
                accept=".pdf, .png, .jpg, .jpeg" onchange="preview()" />
              <p id="business_files">No Files Chosen</p>
            </div> <br>

            <div class="form-group group-two col-md-6">
              <label for="fin_doc" class="label"><i class="fas fa-upload"></i> &nbsp; Financial Statement</label>
              <input type="file" id="fin_doc" name="businessFiles" class="form-control" multiple="multiple"
                accept=".pdf, .png, .jpg, .jpeg" onchange="preview()" />
              <p id="financial_files">No Files Chosen</p>
            </div>
          </div>

          <div class="row">
            <div class="form-group group-three col-md-6">
              <label for="bus_doc" class="label"><i class="fas fa-upload"></i> &nbsp; Company Profile</label>
              <input type="file" id="bus_doc" name="businessFiles" class="form-control" multiple="multiple"
                accept=".pdf, .png, .jpg, .jpeg" onchange="preview()" />
              <p id="business_files">No Files Chosen</p>
            </div> <br>

            <div class="form-group group-three col-md-6">
              <label for="fin_doc" class="label"><i class="fas fa-upload"></i> &nbsp; Incorporation Document</label>
              <input type="file" id="fin_doc" name="businessFiles" class="form-control" multiple="multiple"
                accept=".pdf, .png, .jpg, .jpeg" onchange="preview()" />
              <p id="financial_files">No Files Chosen</p>
            </div> <br>
          </div>

          <button type="submit" class="btn btn-success">
            Register
          </button>
        </form>
    </div>
  </div>




  <%- include("../partials/default/footer") %>